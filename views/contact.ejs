<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Kontak</h2>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Nomor Hape</th>
                    <th scope="col">Email</th>
                    <th scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% contacts.forEach((contact, index) => { %>
                  <tr>
                    <% i = 1 %> 
                    <th scope="row"><%= index + 1 %> </th>
                      <td><%= contact.nama %> </td>
                      <td><%= contact.nohp %> </td>
                      <td><%= contact.email %> </td>
                      <td><span class="badge bg-success"><i class="bi bi-info-circle"></i> Detail</span></td>
                    </tr>
                    <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>